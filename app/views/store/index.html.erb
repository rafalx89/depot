<h1 id="">Your Pragmatic Catalog</h1>
<% for product in @products  %>
        <div class="entry">
                <%=link_to  image_tag(product.image_url), "/site", :method => :post  %>
                <h3 id=""><%= h product.title %></h3>
                <%= product.description %>
                <div class="price-line">
                        <span class="price"><%= number_to_currency(product.price) %></span>
                        <%= button_to "Add to Cart" %>
                </div>
                <br/>
        </div>
<% end  %>
